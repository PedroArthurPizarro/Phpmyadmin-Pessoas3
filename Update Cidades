UPDATE Pessoas
SET Cidade = CASE
    WHEN PessoasID = 1 THEN 'Belo Horizonte'
    WHEN PessoasID = 2 THEN 'Santa Maria da Serra'
    WHEN PessoasID = 3 THEN 'Florianópolis'
    WHEN PessoasID = 4 THEN 'Palmas'
    WHEN PessoasID = 5 THEN 'Areal'
    WHEN PessoasID = 6 THEN 'Londrina'
    WHEN PessoasID = 7 THEN 'Belo Horizonte'
    WHEN PessoasID = 8 THEN 'Santa Maria da Serra'
    WHEN PessoasID = 9 THEN 'Florianópolis'
    WHEN PessoasID = 10 THEN 'Palmas'
    WHEN PessoasID = 11 THEN 'Areal'
    WHEN PessoasID = 12 THEN 'Londrina'
    WHEN PessoasID = 13 THEN 'Belo Horizonte'
    WHEN PessoasID = 14 THEN 'Santa Maria da Serra'
    WHEN PessoasID = 15 THEN 'Florianópolis'
    WHEN PessoasID = 16 THEN 'Palmas'
    WHEN PessoasID = 17 THEN 'Areal'
    WHEN PessoasID = 18 THEN 'Londrina'
    WHEN PessoasID = 19 THEN 'Belo Horizonte'
    WHEN PessoasID = 20 THEN 'Santa Maria da Serra'
    WHEN PessoasID = 21 THEN 'Florianópolis'
    WHEN PessoasID = 22 THEN 'Palmas'
    WHEN PessoasID = 23 THEN 'Areal'
    WHEN PessoasID = 24 THEN 'Londrina'
    WHEN PessoasID = 25 THEN 'Belo Horizonte'
    WHEN PessoasID = 26 THEN 'Santa Maria da Serra'
    WHEN PessoasID = 27 THEN 'Florianópolis'
    WHEN PessoasID = 28 THEN 'Palmas'
    WHEN PessoasID = 29 THEN 'Areal'
    WHEN PessoasID = 30 THEN 'Londrina'
    WHEN PessoasID = 31 THEN 'Belo Horizonte'
    WHEN PessoasID = 32 THEN 'Santa Maria da Serra'
    -- Adicione mais casos conforme necessário
END;
